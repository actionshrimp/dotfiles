snippet client-tests "client side test module (js)"
define([
	'chai',
	'testhelpers',
	'test/fakes/spies',
	'test/fakes/page',
	'jquery',
	'lodash',
	'handlebars'
], function (chai, helpers, spies, fakePage, $, _, Handlebars) {
	
	var assert = chai.assert;

	describe('${1:module name}', function () {
		var squire, page;

		beforeEach(function () {
			squire = helpers.createSquireWithNiceErrors();
			squire.mock('jquery', helpers.returns($));
			squire.mock('handlebars', helpers.returns(Handlebars));

			page = fakePage.create($);
		});

		afterEach(function () {
			page.destroy();
		});

		it('${2:does something}', function (done) {

			squire.require(done, ['${3:path/to/module}'], function (${4:moduleName}) {
				$5
				done();
			});
		});
	});
});
endsnippet

snippet sqr "squire require (js)"
